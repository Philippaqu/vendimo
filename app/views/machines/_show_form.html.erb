<section id="contact">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading text-uppercase">Machine # <%= @machine.id %> </h2>
      </div>
    </div>
    <div class="row">
    <p class="section-subheading text-muted">Number of registered machines by <strong><%= @company.name %></strong> : <%= @machines_count %></p>
    </div>
    <div class="machine-pictures">
      <% building_url = @machine.building_photo? ? cl_image_path(@machine.building_photo.path) : "http://via.placeholder.com/350x150"%>
      <% machine_url = @machine.machine_photo? ? cl_image_path(@machine.machine_photo.path) : "http://via.placeholder.com/350x150" %>
      <%= image_tag building_url %>
      <%= image_tag machine_url %>
    </div>
    <div class="row">
      <p class="section-subheading text-muted">Location: <%= @machine.address %></p>
    </div>
    <div>
      <div class="row">
        <p class="section-subheading text-muted">Stock: <% @category.each do |category| %>
          <% if category.name == 'Coffee' %>
          <span class="fa-stack fa-1x">
            <i class="fa fa-circle fa-stack-2x text-primary"></i>
            <i class="fa fa-coffee fa-stack-1x fa-inverse"></i>
          </span>
          <% elsif category.name == 'Beverages' %>
          <span class="fa-stack fa-1x">
            <i class="fa fa-circle fa-stack-2x text-primary"></i>
            <i class="fa fa-beer fa-stack-1x fa-inverse"></i>
          </span>
          <% elsif category.name == 'Snacks' %>
          <span class="fa-stack fa-1x">
            <i class="fa fa-circle fa-stack-2x text-primary"></i>
            <i class="fa fa-cutlery  fa-stack-1x fa-inverse"></i>
          </span>
          <% elsif category.name == 'Candy' %>
          <span class="fa-stack fa-1x">
            <i class="fa fa-circle fa-stack-2x text-primary"></i>
            <i class="fa fa-birthday-cake fa-stack-1x fa-inverse"></i>
          </span>
          <% end %>
          <% end %>
        </p>
      </div>
      <div>
        <%= link_to "Delete", machine_path(@machine), class: "btn btn-danger", method: :delete %>
        <%= link_to "Update", edit_machine_path(@machine), class: "btn btn-primary" %>
      </div>
    </div>
  </section>

<section id="services">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading text-uppercase">Machine # <%= @machine.id %> </h2>
        <h3 class="section-subheading text-muted">Check out how vendimo can make your life easier.</h3>
      </div>
    </div>
    <div class="row text-center">
      <div class="col-md-4">
        <span class="fa-stack fa-4x">
          <i class="fa fa-circle fa-stack-2x text-primary"></i>
          <i class="fa fa-mobile fa-stack-1x fa-inverse"></i>
        </span>
        <h4 class="service-heading">Download the app</h4>
        <p class="text-muted">Download our app from your app store.</p>
      </div>
      <div class="col-md-4">
        <span class="fa-stack fa-4x">
          <i class="fa fa-circle fa-stack-2x text-primary"></i>
          <i class="fa fa-map-marker fa-stack-1x fa-inverse"></i>
        </span>
        <h4 class="service-heading">Locate a Vendimo enabled Vending Machine</h4>
        <p class="text-muted">Register with us and locate vending machines near to you.</p>
      </div>
      <div class="col-md-4">
        <span class="fa-stack fa-4x">
          <i class="fa fa-circle fa-stack-2x text-primary"></i>
          <i class="fa fa-qrcode fa-stack-1x fa-inverse"></i>
        </span>
        <h4 class="service-heading">Snap the QR code and you're done!</h4>
        <p class="text-muted">Pay using your phone.</p>
      </div>
    </div>
  </div>
</section>
