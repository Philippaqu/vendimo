<section id="contact">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading text-uppercase"><%= resource_name.to_s.humanize %> Sign Up</h2>
        <h3 class="section-subheading text-muted">Join Vendimo.</h3>
      </div>
    </div>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
    <div class="row">
      <div class="col-lg-12">
        <form id="contactForm" name="sentMessage" novalidate>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <h3 class="section-heading text-uppercase">* Company Name</h3>
                <%= f.input :name, required: true, label: "Company name", class: "form-control", id: "name" %>
              </div>
              <div class="form-group">
                <h3 class="section-heading text-uppercase">* Email</h3>
                <%= f.input :email, required: true, autofocus: true, class: "form-control", id: "email" %>
                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <p class="help-block text-danger">Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
                <% end %>
              </div>
              <div class="form-group">
                <h3 class="section-heading text-uppercase">Password</h3>
                <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false, class: "form-control", id: "password" %>
              </div>
              <div class="form-group">
                <h3 class="section-heading text-uppercase">Password confirmation</h3>
                <%= f.input :password_confirmation, required: false %>
                <p class="help-block text-danger"></p>
              </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-lg-12 text-center">
              <div id="success"></div>
              <%= f.button :submit, "Sign up", id: "sendMessageButton", class: "btn btn-primary btn-xl text-uppercase"  %>
            </div>
          </div>
        </form>
      </div>
    </div>
    <% end %>
    <%= render "companies/shared/links" %>
  </div>
</section>

