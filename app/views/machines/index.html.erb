
<section id="dashboard">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h2 class="section-heading text-uppercase">Dashboard</h2>
      </div>
    </div>
    <div id="map" style="width: 100%; height: 500px;"></div>
    <br>
    <div class="row">
      <div class="col-lg-12">
        <h3 class="section-heading">Vending Machine Status</h3>
      </div>
    </div>
    <% @machines.each do |machine| %>
    <div class="row">
      <div class="col-xs-12 col-lg-3">
        <a href="https://placeholder.com"><img src="http://via.placeholder.com/250x100"></a>
      </div>
      <div class="col-xs-12 col-lg-5">
        <p class="section-subheading text-muted"><%= machine.address %></p>
      </div>
      <div class="col-xs-12 col-lg-4">
        <div class="btn-group-md text-right">
          <button type="button" class="btn btn-info">View QR Code</button>
          <%= link_to "Edit", edit_machine_path(machine.id), class: "btn btn-primary" %>
          <%= link_to "Delete", machine_path(machine.id), class: "btn btn-danger", method: :delete %>
        </div>
      </div>
    </div>
    <br>
    <% end %>
  </div>
</section>

<% content_for(:after_js) do %>
<%= javascript_tag do %>
var handler = Gmaps.build('Google');
handler.buildMap({ internal: { id: 'map' } }, function() {
markers = handler.addMarkers(<%= raw @hash.to_json %>);
handler.bounds.extendWith(markers);
handler.fitMapToBounds();
if (markers.length == 0) {
handler.getMap().setZoom(2);
} else if (markers.length == 1) {
handler.getMap().setZoom(14);
}
});
<% end %>
<% end %>
