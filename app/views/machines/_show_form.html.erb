  <section id="machines">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2 class="section-heading text-uppercase">Machine # <%= @machine.id %> </h2>
          <p class="section-subheading text-muted">Number of registered machines by <strong><%= @company.name %></strong> : <%= @machines_count %></p>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12 text-center">
          <div class="machine-pictures">
            <% building_url = @machine.building_photo? ? cl_image_path(@machine.building_photo.path) : "http://via.placeholder.com/350x150"%>
            <% machine_url = @machine.machine_photo? ? cl_image_path(@machine.machine_photo.path) : "http://via.placeholder.com/350x150" %>
            <%= image_tag building_url %>
            <%= image_tag machine_url %>
            <br></br>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12 text-center">
          <p class="section-subheading text-muted"><strong>Location: </strong><%= @machine.address %></p>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12 text-center">
          <p class="section-subheading text-muted"><strong>Stock: </strong><% @category.each do |category| %>
            <% if category.name == 'Coffee' %>
            <span class="fa-stack fa-1x">
              <i class="fa fa-circle fa-stack-2x text-primary"></i>
              <i class="fa fa-coffee fa-stack-1x fa-inverse"></i>
            </span>
            <% elsif category.name == 'Beverages' %>
            <span class="fa-stack fa-1x">
              <i class="fa fa-circle fa-stack-2x text-primary"></i>
              <i class="fa fa-beer fa-stack-1x fa-inverse"></i>
            </span>
            <% elsif category.name == 'Snacks' %>
            <span class="fa-stack fa-1x">
              <i class="fa fa-circle fa-stack-2x text-primary"></i>
              <i class="fa fa-cutlery  fa-stack-1x fa-inverse"></i>
            </span>
            <% elsif category.name == 'Candy' %>
            <span class="fa-stack fa-1x">
              <i class="fa fa-circle fa-stack-2x text-primary"></i>
              <i class="fa fa-birthday-cake fa-stack-1x fa-inverse"></i>
            </span>
            <% elsif category.name == 'Electronics' %>
            <span class="fa-stack fa-1x">
              <i class="fa fa-circle fa-stack-2x text-primary"></i>
              <i class="fa fa-plug fa-stack-1x fa-inverse"></i>
            </span>
            <% end %>
            <% end %>
          </p>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12 text-center">
          <div class="btn-toolbar-md">
            <%= link_to "Delete", machine_path(@machine), class: "btn btn-danger", method: :delete %>
            <%= link_to "Update", edit_machine_path(@machine), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </section>