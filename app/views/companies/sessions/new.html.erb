<section id="contact">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <%= render "companies/shared/sign_buttons" %>
        <h2 class="section-heading text-uppercase"><%= resource_name.to_s.humanize %> Sign In</h2>

      </div>
    </div>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col-lg-12">
        <form id="contactForm" name="sentMessage" novalidate>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <h3 class="section-heading text-uppercase">* Email</h3>
                <%= f.input :email, required: true, autofocus: true, class: "form-control", id: "email" %>
              </div>
              <div class="form-group">
                <h3 class="section-heading text-uppercase">Password</h3>
                <%= f.input :password, autocomplete: "off", required: true, class: "form-control", id: "password" %>
              </div>
              <div class="form-group">
                <h3 class="section-heading text-uppercase">Remember me?</h3>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-lg-12 text-center">
              <div id="success"></div>
              <%= f.button :submit, "Sign in", id: "sendMessageButton", class: "btn btn-primary btn-xl text-uppercase"  %>
            </div>
          </div>
        </form>
      </div>
    </div>
    <% end %>
    <%= render "companies/shared/links" %>
  </div>
</section>


