<section id="register-machines">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading text-uppercase">Register machine</h2>
        <h3 class="section-subheading text-muted">Provide the details of your new machine</h3>
      </div>
    </div>
    <%= simple_form_for @machine do |f|%>
    <div class="row">
      <!-- MACHINE INFO -->
      <div class="col-lg-6">
        <h3>Machine Info:</h3>
        <div class="form-group">
          <input class="form-control" type="text" value="Artisanal kale" id="example-text-input">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" value="Artisanal kale" id="example-text-input">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" value="Artisanal kale" id="example-text-input">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" value="Artisanal kale" id="example-text-input">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" value="Artisanal kale" id="example-text-input">
        </div>

        <div class="form-group">
          <%= f.input :building_photo, as: :attachinary, class: "form-control",label: "Upload picture of vending machine sourroundings" %>
          <p class="help-block text-danger"></p>
        </div>
        <div class="form-group">
          <%= f.input :machine_photo, as: :attachinary, class: "form-control",label: "Upload picture of actual vending machine" %>
          <p class="help-block text-danger"></p>
        </div>
      </div>
      <!-- LOCATION INFO -->
      <div class="col-lg-6">
        <h3>Location info:</h3>
        <div class="form-group">
          <%= f.input :address, class: "form-control", placeholder: "Address *"%>
        </div>
        <div class="form-group">
          <input class="form-control" type="text" value="Artisanal kale" id="example-text-input">
        </div>
        <div class="form-group">
          <input class="form-control" type="tel" value="1-(555)-555-5555" id="example-tel-input">
        </div>
        <div class="form-group ">
          <input class="form-control" type="date" value="2011-08-19" id="example-date-input">
        </div>
        <div class="form-group ">
          <input class="form-control" type="date" value="2011-08-19" id="example-date-input">
        </div>
      </div>
      <div class="col-lg-12">
        <div class="form-group">

        </div>
      </div>
      <div class="clearfix"></div>
      <div class="col-lg-12 text-center">
        <div id="success"></div>
        <%= f.button :submit, "Register Machine", class: "btn btn-primary btn-xl text-uppercase"  %>
      </div>
    </div>
  </div>
</div>
<% end %>
</div>
</section>
