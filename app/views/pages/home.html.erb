<%= render 'shared/banner' %>
<!-- Services -->
<section id="services">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading text-uppercase">How does it work?</h2>
        <h3 class="section-subheading text-muted">Check out how vendimo can make your life easier.</h3>
      </div>
    </div>
    <div class="row text-center">
      <div class="col-md-4">
        <span class="fa-stack fa-4x">
          <i class="fa fa-circle fa-stack-2x text-primary"></i>
          <i class="fa fa-mobile fa-stack-1x fa-inverse"></i>
        </span>
        <h4 class="service-heading">Download the app</h4>
        <p class="text-muted">Download our app from your app store.</p>
      </div>
      <div class="col-md-4">
        <span class="fa-stack fa-4x">
          <i class="fa fa-circle fa-stack-2x text-primary"></i>
          <i class="fa fa-map-marker fa-stack-1x fa-inverse"></i>
        </span>
        <h4 class="service-heading">Locate a Vendimo enabled Vending Machine</h4>
        <p class="text-muted">Register with us and locate vending machines near to you.</p>
      </div>
      <div class="col-md-4">
        <span class="fa-stack fa-4x">
          <i class="fa fa-circle fa-stack-2x text-primary"></i>
          <i class="fa fa-qrcode fa-stack-1x fa-inverse"></i>
        </span>
        <h4 class="service-heading">Snap the QR code to pay, and you're done!</h4>
        <p class="text-muted">Pay using your phone.</p>
      </div>
    </div>
  </div>
</section>

<!-- About -->
<section class="bg-light" id="getvendimo">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
