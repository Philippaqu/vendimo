<section id="register-machines">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading text-uppercase">Register machine</h2>
        <h3 class="section-subheading text-muted">Provide the details of your new machine</h3>
      </div>
    </div>
    <%= simple_form_for @machine do |f|%>
    <div class="row">
      <!-- MACHINE INFO -->
      <div class="col-lg-6">
        <h3>Machine Info:</h3>
        <div class="form-group">
          <%= f.input :manufacturer, placeholder: "Philips", class: "form-control",label: "Manufacturer" %>
        </div>
        <div class="form-group">
          <%= f.input :model, placeholder: "DSX98000", class: "form-control",label: "Model" %>
        </div>
        <div class="form-group">
          <%= f.input :firmware, placeholder: "DEX9.0", class: "form-control",label: "Firmware" %>
        </div>
        <div class="form-group">
          <%= f.input :serial_number, placeholder: "SN579209345867w-9", class: "form-control",label: "Serial Number" %>
        </div>
      </div>
      <!-- LOCATION INFO -->
      <div class="col-lg-6">
        <h3>Location info:</h3>
        <div class="form-group">
          <%= f.input :address, class: "form-control", placeholder: "Rua da sociedade farmacutiva 5, Lisboa"%>
        </div>
        <div class="form-group">
          <%= f.input :location_contact, placeholder: "Maria Jose", class: "form-control",label: "Location Contact" %>
        </div>
        <div class="form-group">
          <%= f.input :location_phone, placeholder: "+351 123 123 123", class: "form-control",label: "Phone" %>
        </div>
        <div class="form-group ">
          <%= f.input :location_install_date, as: :date, class: "form-control",label: "Install Date" %>
        </div>
      </div>
      <div class="col-lg-12">
        <div class="form-group">
          <%= f.input :building_photo, as: :attachinary, class: "form-control",label: "Location picture" %>
          <p class="help-block text-danger"></p>
        </div>
        <div class="form-group">
          <%= f.input :machine_photo, as: :attachinary, class: "form-control",label: "Machine picture" %>
          <p class="help-block text-danger"></p>
        </div>
      </div>
      <div class="clearfix"></div>
      <div class="col-lg-12 text-center">
        <div id="success"></div>
        <%= f.button :submit, class: "btn btn-primary btn-xl text-uppercase"  %>
      </div>
    </div>
  </div>
</div>
<% end %>
</div>
</section>
